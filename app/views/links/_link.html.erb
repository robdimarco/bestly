<table class ="links">
	<tr>
		<td class ="index_number">
		<%= link_counter + 1 %>.
		</td>	
		<td class ="vote_arrow">
			<%= link_to image_tag("icons/arrow_up.png", :alt => "Vote up"), vote_up_link_path(link), :method => :post, :remote => true %>
		</td>
		<td class="link_title">
			<%= link_to link.description, link.url %>
			<span class="link_domain">(<%= url=link.url;url = "http://" + link.url unless url =~ /^http/;URI.parse(url).host%>)</span>
		</td>
	</tr>	
	<tr>
		<td colspan="1">
		</td>
		<td class ="vote_arrow">
			<%= link_to image_tag("icons/arrow_down.png", :alt => "Vote down"), vote_down_link_path(link), :method => :post, :remote => true %>
		</td>
		<td class ="link_info">
			<%= link.plusminus %> votes.
			Posted by <%= link_to link.user.username, link.user %>
			<%= time_ago_in_words(link.created_at) %> ago.
		</td>
	</tr>
	<tr style="height:5px">
	</tr>
</table>